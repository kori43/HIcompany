<Window x:Class="HIcompany.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HIcompany"
        mc:Ignorable="d"
        Title="Авторизация" Height="250" Width="350" Background="Wheat" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>

        <StackPanel Width="350" Height="30" Grid.Row="0" Margin="5" Background="#FFB140" Grid.ColumnSpan="2">
            <TextBlock Text="Авторизация" HorizontalAlignment="Center"/>
        </StackPanel>

        <TextBlock Text="Login:" Grid.Row="1" Margin="35,5,5,5" VerticalAlignment="Top"/>
        <TextBox x:Name="TextBox_Login" Grid.Row="1" Width="280" Height="30" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
        <TextBlock Text="Password:" Grid.Row="2" Margin="35,5,5,5"/>
        <PasswordBox x:Name="PasswordBox_Password" Grid.Row="2" Width="280" Height="30" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
